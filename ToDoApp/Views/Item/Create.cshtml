@model ToDoApp.Models.ToDoItem;

<h2>Create</h2>

<form method="post" asp-action="Create">
    <input type="hidden" asp-for="ItemId"/>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control"/>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" type="date" placeholder="dd-mm-yyyy" class="form-control"/>
        <span class="text-danger" asp-validation-for="DueDate"></span>
    </div>

    <div class="form-group">
        <label asp-for="CompletionStatus"></label>
        <select asp-for="CompletionStatus" class="form-control">
            <option value="true">True</option>
            <option value="false">False</option>
        </select>
        <span class="text-danger" asp-validation-for="CompletionStatus"></span>

    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>