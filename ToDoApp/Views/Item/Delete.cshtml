@model ToDoItem

<h2>Delete</h2>
<h3 style="color: red">Are you sure you want to delete this item?</h3>

<div>
    <h3>@Model.Name</h3>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">
            <label asp-for="DueDate"></label>
        </dt>
        <dd class="col-sm-10">@Model.DueDate</dd>

        <dt class="col-sm-2">
            <label asp-for="CompletionStatus"></label>
        </dt>
        <dd class="col-sm-10">@Model.CompletionStatus</dd>
    </dl>
</div>
<hr/>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ItemId"/>
    <input type="submit" value="Delete" class="btn btn-danger"/>
    <a asp-controller="Item" asp-action="List" class="btn btn-primary">Back to list</a>
</form>